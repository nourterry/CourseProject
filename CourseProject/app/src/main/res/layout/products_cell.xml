<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    app:contentPadding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<ImageView
    android:id="@+id/img_products"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:scaleType="centerCrop"
    app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/ic_baseline_products"
    app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:id="@+id/txt_name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_products"
        app:layout_constraintTop_toTopOf="@id/img_products"
        android:layout_marginTop="8dp"
        android:text="name_products"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/txt_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cash"
        app:layout_constraintTop_toBottomOf="@id/txt_name_product"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/txt_name_product"
        android:textColor="@color/purple_background"/>
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="9"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/img1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/txt_price"
        app:layout_constraintTop_toTopOf="@id/txt_price"
        />
    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_money_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/txt_price"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>