<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">
<include layout="@layout/toolbar_custom_back" android:id="@+id/toolbar"/>
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:src="@drawable/ic_baseline_products"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        android:text="price at choice"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit price :"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/txt1"
        app:layout_constraintEnd_toStartOf="@id/txt_unit_price"/>
    <TextView
        android:id="@+id/txt_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/purple_background"
        app:layout_constraintTop_toTopOf="@id/txt1"
        app:layout_constraintEnd_toStartOf="@id/txt_currency"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/txt_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        app:layout_constraintTop_toTopOf="@id/txt1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total price :"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintEnd_toStartOf="@id/txt_unit_price"
        />
    <TextView
        android:id="@+id/txt_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_marginTop="8dp"
        android:textColor="@color/purple_background"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintEnd_toStartOf="@id/txt_currency2"
        android:layout_marginEnd="4dp"/>

    <TextView
        android:id="@+id/txt_currency2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/black"
        />
    <View
        android:id="@+id/view_horizontal"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_currency2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray"
        android:layout_margin="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        app:layout_constraintTop_toBottomOf="@id/view_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/btn_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/txt2"
        app:layout_constraintTop_toBottomOf="@id/view_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/yellow_logo"/>
    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintStart_toEndOf="@id/btn_plus"
        app:layout_constraintTop_toTopOf="@id/btn_plus"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="10dp"
        />
    <Button
        android:id="@+id/btn_sub"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/yellow_logo"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/txt_number"
        app:layout_constraintTop_toTopOf="@id/btn_plus"/>
    <TextView
        android:id="@+id/txt_products_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Products details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"/>
  <EditText
      android:id="@+id/edit_details"
      android:layout_width="0dp"
      android:layout_height="70dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/txt_products_details"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:background="@drawable/edit_search_background"
      android:layout_marginTop="8dp"
      android:padding="8dp"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/yellow_logo"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>