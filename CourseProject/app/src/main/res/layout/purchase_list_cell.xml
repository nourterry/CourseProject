<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
     app:contentPadding="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/purchase_price"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="5"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_margin="8dp"
        android:background="@drawable/circular_text"
        android:gravity="center"/>
    <TextView
        android:id="@+id/purchase_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/purchase_price"
        android:layout_marginStart="16dp"
        android:text="Name of product"
        app:layout_constraintTop_toTopOf="@id/purchase_price"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/purchase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/purchase_price"
        android:layout_marginStart="16dp"
        android:text="13/11/2019"
        app:layout_constraintTop_toBottomOf="@id/purchase_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/purple_background"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>